server {
    server_name {{ ansible_fqdn }};
    listen {{ default_http_port }};

    index index.html;
    root {{ web_root }};

    access_log /var/log/nginx/{{ ansible_fqdn }}_access.log combined;
    error_log /var/log/nginx/{{ ansible_fqdn }}_error.log warn;

    {% if use_ssl == true %}
    listen {{ default_ssl_port }} ssl;
    ssl_certificate {{ ssl_cert_file }};
    ssl_certificate_key {{ ssl_key_file }};
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:DES-CBC3-SHA:!ADH:!AECDH:!MD5;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains";
    #add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate {{ ssl_cert_file }};
    resolver 8.8.8.8 8.8.4.4;
    {% endif %}

    ## performance boost using gzip
    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
    # end of GZIP block

    rewrite ^/(.*)/$ /$1 permanent;
    rewrite ^/$ /index.html last;

    location /index.html {
      index /index.html;
      {% if web_users is defined %}
      auth_basic "Restricted";
      auth_basic_user_file {{ default_htpasswd_file }};
      {% endif %}
    }

}
